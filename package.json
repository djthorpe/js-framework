{
  "name": "@djthorpe/js-framework",
  "version": "0.0.46",
  "description": "Javascript Framework",
  "main": "dist/index.js",
  "scripts": {
    "all": "npm-run-all lint build docs",
    "build": "rm -fr dist && install -d dist && cp -r html/* dist && esbuild js/index.js --format=esm --minify --bundle --outdir=dist --sourcemap --loader:.woff=dataurl --loader:.woff2=dataurl",
    "lint": "eslint js",
    "docs": "jsdoc -c config/jsdoc.config.json",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": [
        "css",
        "html",
        "js"
      ],
      "extensions": "html,css,js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/djthorpe/js-framework.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "author": "David Thorpe",
  "license": "Apache",
  "bugs": {
    "url": "https://github.com/djthorpe/js-framework/issues"
  },
  "homepage": "https://github.com/djthorpe/js-framework#readme",
  "devDependencies": {
    "@ckeditor/jsdoc-plugins": "^20.0.0",
    "esbuild": "^0.11.12",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jsdoc": "^3.6.6",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.2",
    "bootstrap": "^5.0.1",
    "bootstrap-icons": "^1.4.1",
    "npm-watch": "^0.9.0"
  },
  "files": [
    "dist/**/*.{js,map,woff,woff2,txt,ttf,css,html}"
  ]
}
